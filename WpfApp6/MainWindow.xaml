<Window
    x:Class="WpfApp6.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    mc:Ignorable="d"
    Title="AetherV1" Height="600" Width="1200"
    ui:WindowHelper.UseModernWindowStyle="True" ResizeMode="NoResize">

    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="ContentFrame"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.1" />
        </Storyboard>
        <Storyboard x:Key="FadeOutStoryboard">
            <DoubleAnimation Storyboard.TargetName="ContentFrame"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.1" />
        </Storyboard>

        <Style x:Key="CustomNavigationViewItemStyle" TargetType="ui:NavigationViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGray"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ui:NavigationView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="IsBackButtonVisible" Value="Collapsed"/>
            <Setter Property="IsPaneToggleButtonVisible" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="23"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="All Credits Go To Eon For Base Launcher!" 
                       FontSize="12" Foreground="White"/>
        </StackPanel>

        <Grid Grid.Row="1" Background="Black">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="315"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="0"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="Black">
                <ui:NavigationView x:Name="NavView" Loaded="NavView_Loaded" SelectionChanged="NavView_SelectionChanged"
                                   PaneDisplayMode="Left" IsBackButtonVisible="Collapsed" 
                                   IsPaneToggleButtonVisible="False" IsPaneOpen="True" 
                                   HorizontalAlignment="Left" Width="135">

                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem Content="News" Tag="News" Style="{StaticResource CustomNavigationViewItemStyle}"/>
                        <ui:NavigationViewItem Icon="Play" Content="Play" Tag="Home" Style="{StaticResource CustomNavigationViewItemStyle}"/>
                        <ui:NavigationViewItem Icon="Library" Content="Library" Tag="Library" Style="{StaticResource CustomNavigationViewItemStyle}"/>
                        <ui:NavigationViewItem Icon="Shop" Content="Donate" Tag="Donate" Style="{StaticResource CustomNavigationViewItemStyle}"/>
                    </ui:NavigationView.MenuItems>
                </ui:NavigationView>
            </Border>

            <ui:Frame x:Name="ContentFrame" Margin="121,0,0,0" Grid.ColumnSpan="4" Background="Black" Opacity="0">
                <ui:Frame.ContentTransitions>
                    <ui:TransitionCollection>
                        <ui:NavigationThemeTransition />
                    </ui:TransitionCollection>
                </ui:Frame.ContentTransitions>
            </ui:Frame>
        </Grid>
    </Grid>
</Window>
